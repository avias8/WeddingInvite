datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Invitee {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  isAttending Boolean  @default(false)
  guests      Int      @default(1)
  createdAt   DateTime @default(now())
  token       String   @unique @default(uuid())
}
